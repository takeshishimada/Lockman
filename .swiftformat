# SwiftFormat Configuration for Lockman

# Swift version
--swiftversion 5.9

# Basic formatting options
--indent 2
--importgrouping testable-bottom
--commas always
--trimwhitespace always
--allman false
--wraparguments before-first
--decimalgrouping 3,6
--elseposition same-line
--guardelse same-line
--closingparen balanced
--funcattributes prev-line

# Rules
--rules \
    sortImports, \
    duplicateImports, \
    blankLinesBetweenImports, \
    braces, \
    spaceAroundBraces, \
    spaceInsideBraces, \
    emptyBraces, \
    elseOnSameLine, \
    wrapMultilineStatementBraces, \
    indent, \
    linebreaks, \
    linebreakAtEndOfFile, \
    spaceAroundOperators, \
    spaceAroundParens, \
    spaceAroundBrackets, \
    spaceAroundComments, \
    spaceAroundGenerics, \
    spaceInsideParens, \
    spaceInsideBrackets, \
    spaceInsideComments, \
    spaceInsideGenerics, \
    consecutiveBlankLines, \
    consecutiveSpaces, \
    blankLinesAtStartOfScope, \
    blankLinesAtEndOfScope, \
    blankLinesBetweenScopes, \
    trailingSpace, \
    trailingCommas, \
    semicolons, \
    redundantParens, \
    redundantReturn, \
    redundantType, \
    redundantVoidReturnType, \
    redundantGet, \
    redundantInit, \
    redundantLet, \
    redundantLetError, \
    redundantNilInit, \
    redundantObjc, \
    redundantBackticks, \
    redundantBreak, \
    redundantClosure, \
    redundantExtensionACL, \
    redundantFileprivate, \
    redundantPattern, \
    redundantRawValues, \
    andOperator, \
    anyObjectProtocol, \
    assertionFailures, \
    blockComments, \
    enumNamespaces, \
    fileHeader, \
    hoistPatternLet, \
    initCoderUnavailable, \
    isEmpty, \
    leadingDelimiters, \
    modifierOrder, \
    preferKeyPath, \
    sortSwitchCases, \
    strongOutlets, \
    strongifiedSelf, \
    todos, \
    trailingClosures, \
    typeSugar, \
    unusedArguments, \
    void, \
    wrapArguments, \
    wrapAttributes, \
    wrapConditionalBodies, \
    wrapEnumCases, \
    wrapSwitchCases, \
    yodaConditions

# Disabled rules
--disable \
    blankLinesAroundMark, \
    extensionAccessControl, \
    wrap, \
    redundantSelf, \
    organizeDeclarations, \
    acronyms, \
    markTypes, \
    numberFormatting

# Exclude paths
--exclude .build,Carthage,Pods,Sources/Lockman/Internal/Logger.swift